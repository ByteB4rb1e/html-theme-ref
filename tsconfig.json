{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "strict": true,
        "sourceMap": false,
        "esModuleInterop": true,
        "resolveJsonModule": false,
        "allowJs": false,
        "declaration": true,
        "declarationMap": true,
        "outDir": "build/production",
        "baseUrl": "./",
        "paths": { "*": ["node/modules/*"] },
        "lib": ["dom"]
    },
    "include": [
        "src/**/*.ts"
    ]
}

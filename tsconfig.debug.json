{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "sourceMap": true,
        "declarationMap": true,
        "declaration": true,
        "noEmit": false,
        "incremental": true,
        "outDir": "build/debug/script"
    },
    "watchOptions": {
      "watchFile": "useFsEvents",
      "watchDirectory": "useFsEvents",
      "fallbackPolling": "dynamicPriority",
      "synchronousWatchDirectory": true,
      "excludeDirectories": ["**/node_modules", "build"]
    }
}
